@model OnlineMedicineManagementSystem.Medicines

@{
    ViewData["Title"] = "AddMedicines";
}

<h1>AddMedicines</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="AddMedicines">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="MedicineName" class="control-label"></label>
                <input asp-for="MedicineName" class="form-control" />
                <span asp-validation-for="MedicineName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Price" class="control-label"></label>
                <input asp-for="Price" class="form-control" />
                <span asp-validation-for="Price" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Quantity" class="control-label"></label>
                <input asp-for="Quantity" class="form-control" />
                <span asp-validation-for="Quantity" class="text-danger"></span>
            </div>

            <div class="form-group mt-3">
                <input type="submit" value="Add Medicine" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>



@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    }

    @{
    try
    {
        if (TempData["addmedicinesstatus"] != null)
        {
            if (TempData["addmedicinesstatus"].ToString().Equals("ok"))
            {
                <script>
                                    swal("Added Successfull", "Done", "success");
                </script>
            }
            else
            {
                <script>
                                    swal(" Failed", "please try again", "error");
                </script>

            }
        }
    }
    catch { }
}